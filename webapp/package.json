{
  "name": "nutrition",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:debug": "jest --inspect-brk=172.17.0.3:9229 test --runInBand --no-cache",
    "lint": "next lint",
    "cpd": "jscpd src/ --ignore-pattern \"import.*from\\s*'.*'\""
  },
  "dependencies": {
    "next": "13.4.16",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "autoprefixer": "10.4.15",
    "eslint": "^8.47.0",
    "eslint-config-next": "13.4.16",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "jscpd": "3.5.9",
    "postcss": "8.4.28",
    "prettier": "3.0.2",
    "tailwindcss": "3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsx-a11y/recommended",
      "prettier",
      "plugin:prettier/recommended",
      "next",
      "next/core-web-vitals",
      "plugin:jest/all",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "prettier",
      "jest",
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "tsdoc/syntax": "error"
    },
    "root": true,
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        }
      }
    ]
  },
  "jscpd": {
    "threshold": 0,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "gitignore": true,
    "output": "jscpd-report/",
    "mode": "strict"
  }
}
